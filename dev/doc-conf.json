{
    "source": {
        "include": ["../src", "../README.md"],
        "includePattern": ".js$",
        "excludePattern": "(node_modules/|docs)"
    },
    "plugins": ["plugins/markdown"],
    "opts": {
        "encoding": "utf8",
        "readme": "../README.md",
        "destination": "../doc/",
        "recurse": true,
        "verbose": true,
        "template": "../node_modules/clean-jsdoc-theme",
        "theme_opts": {
            "default_theme": "light"
        }
    },
    "markdown": {
        "hardwrap": false,
        "idInHeadings": true
    }
}